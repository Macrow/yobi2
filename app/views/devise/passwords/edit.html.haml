#user_center
  .column.grid_12
    %h2= t("devise.label.change_password")
    = form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f|
      = devise_error_messages!
      = f.hidden_field :reset_password_token
      %div
        = f.label :password, t("devise.label.new_password")
        %br/
        = f.password_field :password
      %div
        = f.label :password_confirmation, t("devise.label.confirm_new_password")
        %br/
        = f.password_field :password_confirmation
      %div= f.submit t("devise.label.change_password"), :class => "btn primary"
    = render :partial => "devise/shared/links"
