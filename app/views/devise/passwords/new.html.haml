#user_center
  .column.grid_12
    %h2= t("deivse.label.forgot")
    = form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f|
      = devise_error_messages!
      %div
        = f.label :email
        = f.email_field :email, :class => "grid_5"
      %div= f.submit t("devise.label.send_reset"), :class => "btn primary"
    = render :partial => "devise/shared/links"
