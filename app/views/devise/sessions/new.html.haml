#user_center
  .column.grid_12
    %h2= t("devise.label.sign_in")
    = form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|
      = f.label :login
      = f.text_field :login, :class => "grid_5"
      = f.label :password
      = f.password_field :password, :class => "grid_5"
      - if devise_mapping.rememberable?
        .float-left= f.check_box :remember_me
        = f.label t("devise.label.remember_me")
      %br
      = f.submit t("devise.label.sign_in"), :class => "btn primary"
    = render :partial => "devise/shared/links"