  .media-grid= link_to image_tag(image.image.thumb.icon.url), image.image.url, :class => "lightbox"
  .action= link_to "Ã—", admin_product_image_path(product, image), :confirm => t("actions.simple.confirm"), :method => :delete, :remote => true, :class => "btn danger"
