<% if @image.valid? %>
  $("#image_<%=@image.id%>").replaceWith("<%= escape_javascript(render :partial => 'admin/product_images/image', :object => @image, :as => :image, :locals => { :product => @image.product }) %>");
  <% unless @orgin_major_image.nil? %>
    $("#image_<%=@orgin_major_image.id%>").replaceWith("<%= escape_javascript(render :partial => 'admin/product_images/image', :object => @orgin_major_image, :as => :image, :locals => { :product => @image.product }) %>");
  <% end %>
<% else %>
  alert("<%= t("errors.genernal") %>");
<% end %>